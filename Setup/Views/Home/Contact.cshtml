@model ContactFormModel

@{
    ViewData["Title"] = "Contact";
}

<!DOCTYPE html>

<html lang="nl">
<head>
    <title>@ViewData["Title"]</title>
</head>
<body>
<div class="text-center">
    <h1 class="display-4 text-light">@ViewData["Title"]</h1>
    <h4 class="display-8 text-light">Neem contact op met Jaël Kwakkel</h4>

    <section class="justify-content-center flex-row">


        @using (Html.BeginForm())
        {
            <div class="row g-3">
                <div class="col-md-6">
                    @Html.LabelFor(s => s.Email, new { @class = "form-label text-light" })
                    @Html.TextBoxFor(s => s.Email, new { @class = "form-control", id = "validationServer01" })
                    <div class="text-warning">
                        @Html.ValidationMessageFor(t => t.Email)
                    </div>
                </div>

                <div class="col-md-6">
                    @Html.LabelFor(s => s.Subject, new { @class = "form-label text-light" })
                    @Html.TextBoxFor(s => s.Subject, new { @class = "form-control" })
                    <div class="text-warning">
                        @Html.ValidationMessageFor(t => t.Subject)
                    </div>
                </div>

                <div class="mb-3">
                    @Html.LabelFor(s => s.Message, new { @class = "form-label text-light" })
                    @Html.TextAreaFor(s => s.Message, new { @class = "form-control" })
                    <div class="text-warning">
                        @Html.ValidationMessageFor(t => t.Message)
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit"/>
                </div>
            </div>
        }
    </section>
</div>
</body>
</html>