@model Setup.Models.Account.AccountModel

@{
    ViewBag.Title = "Create account";
    Layout = "_Layout";
}

@* Based on: https://mdbootstrap.com/docs/standard/extended/registration/ *@

<section class="h-100">
    <div class="mask d-flex align-items-center h-100">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Create an account</h2>
                            @using (Html.BeginForm())
                            {
                                <div class="form-outline m-2">
                                    @Html.LabelFor(s => s.Username, new { @class = "form-label" })
                                    @Html.TextBoxFor(s => s.Username, new { @class = "form-control", placeholder = "Username" })
                                    <div class="text-warning">
                                        @Html.ValidationMessageFor(t => t.Username)
                                    </div>
                                </div>

                                <div class="form-outline m-2">
                                    @Html.LabelFor(s => s.Email, new { @class = "form-label" })
                                    @Html.TextBoxFor(s => s.Email, new { @class = "form-control", placeholder = "name@example.com" })
                                    <div class="text-warning">
                                        @Html.ValidationMessageFor(t => t.Email)
                                    </div>
                                </div>

                                <div class="d-flex justify-content-lg-start form-outline">
                                    <div class="form-outline m-2">
                                        @Html.LabelFor(s => s.Password, new { @class = "form-label" })
                                        @Html.PasswordFor(s => s.Password, new { @class = "form-control", placeholder = "Password" })
                                        <div class="text-warning">
                                            @Html.ValidationMessageFor(t => t.Password)
                                        </div>
                                    </div>
                                    <div class="form-outline m-2">
                                        @Html.LabelFor(s => s.ConfirmPassword, new { @class = "form-label" })
                                        @Html.PasswordFor(s => s.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm password" })
                                        <div class="text-warning">
                                            @Html.ValidationMessageFor(t => t.ConfirmPassword)
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-center m-2">
                                    <input type="submit" class="btn btn-primary" value="Create"/>
                                </div>
                            }
                            <p class="text-center text-muted mt-4 mb-0">
                                Already have an account? <br>
                                @Html.ActionLink("Login", "Login", new { }, new { @class = "fw-bold text-body" })

                                @* <a href="/Account/Login" class="fw-bold text-body">Login here</a> *@
                            </p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>